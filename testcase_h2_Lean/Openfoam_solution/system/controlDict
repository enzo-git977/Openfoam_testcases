FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chemFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.001;

deltaT          1e-06;

maxDeltaT       1;

adjustTimeStep  off;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     ascii;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

DebugSwitches
{
    SolverPerformance   0;
}

functions
{
probes
{
    type            probes;
    libs            ("libsampling.so");

    writeControl    timeStep;
    writeInterval   1;

    fields          (T H O H2 O2 OH H2O N2 N NO HO2 H2O2 AR OH* HE );

    probeLocations
    (
        (0.0 0.0 0.0)
    );
}

}

// ************************************************************************* //
